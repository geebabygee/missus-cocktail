<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo, width: 400, height: 600, crop: :fill %>');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Cocktail Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Add dose</th>
            <th>Delete</th>
          </thead>

          <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.description %></td>
            <td><%= dose.ingredient.name %></td>
             <td><%= link_to new_cocktail_dose_path(@cocktail), class: "text-add" do %>
              <i class="fa fa-plus-circle" aria-hidden="true"></i>
              <% end %>
            </td>
            <td>
              <%= link_to dose_path(dose), method: :delete do %>
                  <i class="fa fa-trash destroy_dose"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <ul class="list-inline">
        <li>
          <%= link_to "Edit cocktail", edit_cocktail_path(@cocktail) %>
        </li>
        <li>
          <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete %>
        </li>
        <br>
      </ul>
    </div>
    <br>
    <br>
  </div>

  <%= link_to "Back to all cocktails", root_path ,class: "btn btn-warning" %>
</div>








