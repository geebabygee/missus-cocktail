<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Create a dose for <%= @cocktail.name %></h1>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient%>
        <%= f.button :submit %>
        <% end %>
    </div>
  </div>
</div>

